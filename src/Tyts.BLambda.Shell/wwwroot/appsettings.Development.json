{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore.Components.WebAssembly.Authentication": "Debug"
        }
    },

    "Cognito": {
        "Authority": "<SECRET>",
        "ClientId": "<SECRET>",
        "RedirectUri": "https://localhost:4433/authentication/login-callback",
        "PostLogoutRedirectUri": "https://localhost:4433/authentication/logged-out",
        "ResponseType": "code",

        "DefaultScopes": [
            // "openid" && "profile" added implicitly
            "api://weather-forecast/access-by-role",
            "api://temperature-log/access-by-role"
        ]
    }
}